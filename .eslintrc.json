{
  "plugins": [
    "react-hooks",
    "react"
  ],
  "extends": [
    "./node_modules/gts/",
    "plugin:react/recommended"
  ],
  "rules": {
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn"
  },
  "overrides": [
    {
      "files": ["**/*.js", "**/*.ts", "**/*.tsx"],
      "rules": {
        "node/no-unpublished-import": "off",
        "node/no-unpublished-require": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}